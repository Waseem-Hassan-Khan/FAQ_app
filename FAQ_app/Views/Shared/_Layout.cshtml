<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FAQ_app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FAQ_app.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .container {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 150px;
            padding: 15px;
        }

        .list-group-item.active {
            background-color: #007bff;
            color: #fff;
        }

        .main-content {
            flex: 1;
            padding: 15px;
        }
    </style>
</head>
<body>
    <header>
        <nav style="background-color: #2980b9; height:100px" class="navbar navbar-expand-sm border-bottom box-shadow mb-3">
            <div class="container">
                <div class="mx-auto">
                    <span style="font-size: 25px; font-weight: 600; color: white;" class="navbar-text mx-3">FREQUENTLY ASKED QUESTIONS</span>
                </div>
            </div>
        </nav>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">All FAQs</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="C" asp-route-topicName="C#">C#</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="C" asp-route-topicName="JavaScript">JavaScript</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="C" asp-route-topicName="Bootstrap">Bootstrap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <div class="sidebar">
            <ul class="list-group">
                <li class="list-group-item active" data-target="general">General</li>
                <li class="list-group-item" data-target="history">History</li>
            </ul>
        </div>
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FAQ_app - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.list-group-item').click(function () {
                $('.list-group-item').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>
</body>
</html>
